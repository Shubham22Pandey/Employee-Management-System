<h2 style="font: italic bold 24px/60px Georgia, serif;"><center>{{viewTitle}}</h2></center>
<form action="/attendance" method="POST" autocomplete="off" style=" background-image: linear-gradient(to bottom, white , rgb(221, 221, 221)); border-radius:25px; padding:15px">
    <input type="hidden" name="_id" value="{{attendance._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{attendance.fullName}}">
        <div class="text-danger">
            {{attendance.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{attendance.email}}">
        <div class="text-danger">
            {{attendance.emailError}}</div>
    </div>
    
    <div class="form-row">
            <div class="form-group col-md-6">
                <label>Date</label>
                <input type="text" class="form-control" name="date" placeholder="Date" value="{{attendance.date}}">
            </div>
             <div class="form-group col-md-6">
                <label>Attendance</label>
                <input type="text" class="form-control" name="attendance" placeholder="Attendance" value="{{attendance.attendance}}">
            </div>
            
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info" style=" background-image: linear-gradient(to left, rgb(0, 162, 255) ,blue); border-radius: 25px;padding: 14px 25px;"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/attendance/listattendance"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>           