    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" name="date" placeholder="Full Name" value="">
        <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Task</label>
        <input type="text" class="form-control" name="task" placeholder="Enter work done" value="">
        <div class="text-danger">
            {{employee.emailError}}</div>
    </div>

    <div class="form-group">
        <center><button type="submit" class="btn btn-info"
            style=" background-image: linear-gradient(to left, rgb(0, 162, 255) ,blue); border-radius: 25px;padding: 14px 25px;"><i
                class="fa fa-database"></i> Submit</button></center>
